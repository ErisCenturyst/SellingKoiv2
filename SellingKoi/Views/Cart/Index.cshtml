@model IEnumerable<CartItem>

<div class="container mt-5">
    <h2 class="text-center mb-4">Giỏ hàng</h2>
    <p class="order-message">Đơn hàng của bạn sẽ được lên lịch để sang Nhật trong 1 tuần</p>

    <div id="cartContainer">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <p class="h5 text-muted">Giỏ hàng trống</p>
                <a href="/Koi/KoiShopping" class="btn btn-primary mt-3">
                    <i class="fas fa-fish me-2"></i>Tiếp tục mua sắm
                </a>
            </div>
        }
        else
        {
            @foreach (var item in Model.OrderBy(item => item.Price == null || item.Price == 0))
            {
                <div class="cart-item">
                    @if (item.Price == 0)
                    {
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="item-name mb-2">
                                    <i class="fas fa-fish me-2 text-primary"></i>
                                    @item.Name
                                </h5>
                                <p class="text-muted mb-0">Cá Koi</p>
                            </div>
                            <button onclick="removeFromCart('@item.Id')" class="btn btn-outline-danger">
                                <i class="fas fa-trash me-1"></i>Xóa
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="item-name mb-2">
                                    <i class="fas fa-route me-2 text-success"></i>
                                    @item.Name
                                </h5>
                                <p class="item-price mb-0">@item.Price.ToString("N0") VNĐ</p>
                            </div>
                            <button onclick="removeFromCart('@item.Id')" class="btn btn-outline-danger">
                                <i class="fas fa-trash me-1"></i>Xóa
                            </button>
                        </div>
                    }
                </div>
            }

            <div class="create-order mt-4 p-4 bg-light rounded">
                <h4 class="mb-4">Thông tin đặt hàng</h4>
                <form method="post" action="/OrderShorten/CreateOrderShorten" id="createOrderForm">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="participantName" class="form-label">Tên người tham gia:</label>
                            <input type="text" id="participantName" name="participantName" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="phoneNumber" class="form-label">Số điện thoại:</label>
                            <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" required 
                                   pattern="[0-9]{10}" title="Vui lòng nhập số điện thoại 10 chữ số" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="departureFrom" class="form-label">Ngày khởi hành từ:</label>
                            <input type="date" id="departureFrom" name="departureFrom" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="departureTo" class="form-label">Ngày khởi hành đến:</label>
                            <input type="date" id="departureTo" name="departureTo" class="form-control" required />
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-check me-2"></i>Tạo Đơn Hàng
                        </button>
                    </div>
                </form>
            </div>
        }
    </div>
</div>

<style>
    .order-message {
        text-align: center;
        font-size: 18px;
        color: #495057;
        margin-bottom: 20px;
        font-weight: 500;
    }

    #cartContainer {
        max-width: 900px;
        margin: 0 auto;
        padding: 30px;
        border: 1px solid #ced4da;
        border-radius: 15px;
        background-color: #ffffff;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .cart-item {
        padding: 20px;
        margin-bottom: 15px;
        border-radius: 10px;
        background-color: #f8f9fa;
        transition: transform 0.2s ease;
    }

    .cart-item:hover {
        transform: translateX(5px);
    }

    .item-name {
        color: #212529;
        margin-bottom: 0;
    }

    .item-price {
        color: #28a745;
        font-weight: 600;
    }

    .create-order {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
    }

    .btn-outline-danger {
        transition: all 0.2s ease;
    }

    .btn-outline-danger:hover {
        transform: scale(1.05);
    }
</style>

<script>
    function removeFromCart(itemId) {
        if (confirm('Bạn có chắc muốn xóa sản phẩm này khỏi giỏ hàng?')) {
            fetch('/Cart/RemoveFromCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ itemId: itemId })
            })
            .then(response => {
                if (response.ok) {
                    location.reload();
                } else {
                    throw new Error('Có lỗi xảy ra');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi xóa sản phẩm khỏi giỏ hàng!');
            });
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        var today = new Date().toISOString().split('T')[0];
        document.getElementById('departureFrom').min = today;
        document.getElementById('departureTo').min = today;

        document.getElementById('createOrderForm').addEventListener('submit', function(event) {
            var departureFrom = new Date(document.getElementById('departureFrom').value);
            var departureTo = new Date(document.getElementById('departureTo').value);
            var today = new Date();
            today.setHours(0, 0, 0, 0);

            if (departureFrom < today) {
                alert("Ngày khởi hành từ không được chọn ở quá khứ.");
                event.preventDefault();
                return;
            }

            if (departureTo < departureFrom) {
                alert("Ngày khởi hành đến phải lớn hơn hoặc bằng ngày khởi hành.");
                event.preventDefault();
                return;
            }
        });
    });
</script>