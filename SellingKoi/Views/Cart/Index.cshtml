@model IEnumerable<CartItem>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<style>
    .order-message {
        text-align: center; /* Căn giữa văn bản */
        font-size: 18px; /* Tăng kích thước chữ */
        color: #495057; /* Thay đổi màu chữ */
        margin-bottom: 20px; /* Tăng khoảng cách dưới */
        font-weight: 500; /* Đậm vừa phải */
    }

    #cartContainer {
        /* ... existing styles ... */
        border: 1px solid #ced4da; /* Thay đổi màu viền */
        border-radius: 15px; /* Bo tròn góc nhiều hơn */
        background-color: #ffffff; /* Giữ màu nền trắng */
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Tăng độ bóng */
        padding: 20px; /* Thêm khoảng cách bên trong */
    }
</style>

<h2>Giỏ hàng</h2>
<p class="order-message">Đơn hàng của bạn sẽ được lên lịch để sang Nhật trong 1 tuần</p>
<div id="cartContainer">
    @if (!Model.Any())
    {
        <p>Giỏ hàng trống.</p>
    }
    else
    {
        @foreach (var item in Model.OrderBy(item => item.Price == null || item.Price == 0))
        {
            if (item.Price == 0) // Kiểm tra nếu đây là cá Koi
            {
                <div class="cart-item">
                    <p class="item-name">Tên cá Koi: @item.Name</p>
                    <button onclick="removeFromCart('@item.Id')" class="btn-remove">Xóa</button>
                </div>
            }
            else // Nếu không phải cá Koi, thì đây là lộ trình
            {
                <div class="cart-item">
                    <p class="item-name">Tên lộ trình: @item.Name</p>
                    <p class="item-price">Giá: @item.Price.ToString("N0") VNĐ</p>
                    <button onclick="removeFromCart('@item.Id')" class="btn-remove">Xóa</button>
                </div>
            }
        }
        <!-- Nút tạo đơn hàng -->
        <div class="create-order">
            <form asp-controller="OrderShorten" asp-action="CreateOrderShorten" method="post">
                <div class="form-group">
                    <label for="participantName">Tên người tham gia:</label>
                    <input type="text" id="participantName" name="participantName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Số điện thoại:</label>
                    <input type="tel" id="phoneNumber" name="phoneNumber" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary btn-create-order">Tạo Đơn Hàng</button>
            </form>
        </div>
    }
</div>

<script>
    // Hàm để xóa mục khỏi giỏ hàng
    function removeFromCart(itemId) {
        fetch('/Cart/RemoveFromCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ itemId: itemId }) // Gửi ID của mục cần xóa
        })
        .then(response => {
            if (response.ok) {
                alert('Đã xóa mục khỏi giỏ hàng!');
                location.reload(); // Tải lại trang để cập nhật giỏ hàng
            } else {
                alert('Có lỗi xảy ra khi xóa mục khỏi giỏ hàng!');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Có lỗi xảy ra khi xóa mục khỏi giỏ hàng!');
        });
    }
</script>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #e9ecef;
        color: #343a40;
        margin: 0;
        padding: 0;
    }

    h2 {
        text-align: center;
        color: #495057;
        font-size: 28px;
        margin-bottom: 30px;
        font-weight: 700;
    }

    #cartContainer {
        max-width: 900px;
        margin: 50px auto;
        padding: 40px;
        border: 1px solid #ced4da;
        border-radius: 15px;
        background-color: #ffffff;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .cart-item {
        padding: 20px;
        margin-bottom: 20px;
        border-bottom: 1px solid #dee2e6;
        transition: background-color 0.3s, transform 0.3s;
    }

    .cart-item:hover {
        background-color: #f8f9fa;
        transform: scale(1.02);
    }

    .item-name {
        font-size: 20px;
        font-weight: 600;
        color: #007bff;
    }

    .item-price {
        font-size: 18px;
        color: #dc3545;
        font-weight: 700;
    }

    .btn-remove {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-remove:hover {
        background-color: #c82333;
    }

    .btn-create-order {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-create-order:hover {
        background-color: #218838;
    }
</style>