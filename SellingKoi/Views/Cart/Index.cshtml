<script>
    // Hàm để xóa mục khỏi giỏ hàng
    function removeFromCart(itemId) {
        fetch('/Cart/RemoveFromCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ itemId: itemId }) // Gửi ID của mục cần xóa
        })
        .then(response => {
            if (response.ok) {
                alert('Đã xóa mục khỏi giỏ hàng!');
                location.reload(); // Tải lại trang để cập nhật giỏ hàng
            } else {
                alert('Có lỗi xảy ra khi xóa mục khỏi giỏ hàng!');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Có lỗi xảy ra khi xóa mục khỏi giỏ hàng!');
        });
    }

    document.getElementById('createOrderForm').addEventListener('submit', function (event) {
        var departureFrom = new Date(document.getElementById('departureFrom').value);
        var departureTo = new Date(document.getElementById('departureTo').value);
