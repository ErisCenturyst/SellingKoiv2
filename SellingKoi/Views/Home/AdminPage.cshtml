@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid">
    <h1 class="mt-4 mb-4 text-center">Admin Dashboard</h1>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Quản lí Khách hàng</h5>
                    <p class="card-text">Quản lí tài khoản người dùng và quyền hạn</p>
                    <a href="@Url.Action("AccountManagement", "Account")" class="btn btn-primary">Đi đến Quản lí Khách hàng</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Quản lí Cá Koi</h5>
                    <p class="card-text">Quản lí danh sách cá Koi và chi tiết</p>
                    <a href="@Url.Action("KoiManagement", "Koi")" class="btn btn-success">Đi đến Quản lí Cá Koi</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Quản lí Trang trại</h5>
                    <p class="card-text">Quản lí các trang trại cá Koi và vị trí</p>
                    <a href="@Url.Action("FarmManagement", "Farm")" class="btn btn-info">Đi đến Quản lí Trang trại</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Quản lí Lộ trình</h5>
                    <p class="card-text">Quản lí các lộ trình giao hàng và lịch trình</p>
                    <a href="@Url.Action("RouteManagement", "Route")" class="btn btn-warning">Đi đến Quản lí Lộ trình</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Quản lí Đơn hàng</h5>
                    <p class="card-text">Quản lí đơn hàng</p>
                    <a href="@Url.Action("OrderShortenedManagement", "OrderShorten")" class="btn btn-success">Đi đến Quản lí Đơn hàng</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Quản lí Chuyến đi</h5>
                    <p class="card-text">Quản lí chuyến đi</p>
                    <a href="@Url.Action("TripManagement", "Trip")" class="btn btn-success">Đi đến Quản lí Chuyến đi</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // You can add any JavaScript for the admin page here
    </script>
}
