@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid">
    <h1 class="mt-4 mb-4 text-center">Admin Dashboard</h1>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Customer Management</h5>
                    <p class="card-text">Manage user accounts and permissions</p>
                    <a href="@Url.Action("AccountManagement", "Account")" class="btn btn-primary">Go to Customer Management</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Koi Management</h5>
                    <p class="card-text">Manage Koi inventory and details</p>
                    <a href="@Url.Action("KoiManagement", "Koi")" class="btn btn-success">Go to Koi Management</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Farm Management</h5>
                    <p class="card-text">Manage Koi farms and locations</p>
                    <a href="@Url.Action("FarmManagement", "Farm")" class="btn btn-info">Go to Farm Management</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Route Management</h5>
                    <p class="card-text">Manage delivery routes and schedules</p>
                    <a href="@Url.Action("RouteManagement", "Route")" class="btn btn-warning">Go to Route Management</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Order Management</h5>
                    <p class="card-text">Manage Order</p>
                    <a href="@Url.Action("OrderShortenedManagement", "OrderShorten")" class="btn btn-success">Go to Order Management</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Trip Management</h5>
                    <p class="card-text">Manage Order</p>
                    <a href="@Url.Action("TripManagement", "Trip")" class="btn btn-success">Go to Trip Management</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // You can add any JavaScript for the admin page here
    </script>
}
