@model IEnumerable<SellingKoi.Models.Farm>

@{
    ViewData["Title"] = "Quản lý Farm";
}

<div class="container mt-4">
    <h2 class="text-center">Quản lý Farm</h2>

    <div class="mb-3 text-right">
        <a asp-controller="Farm" asp-action="CreateFarm" class="btn btn-primary">Thêm Farm Mới</a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Tên Trại</th>
                <th>Chủ Trại</th>
                <th>Vị trí</th>
                <th>Diện tích</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var farm in Model)
            {
                <tr>
                    <td>@farm.Name</td>
                    <td>@farm.Owner</td>
                    <td>
                        <a href="https://www.google.com/maps/search/?api=1&query=@farm.Location" target="_blank" class="btn btn-link">
                            @farm.Location
                        </a>
                    </td>
                    <td>@farm.Size m²</td>
                    <td>
                        <a asp-controller="Farm" asp-action="UpdateFarm" asp-route-id="@farm.Id" class="btn btn-warning">Chỉnh sửa</a>
                        <form asp-controller="Farm" asp-action="NegateFarm" asp-route-id="@farm.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa farm này?');">Xóa</button>
                        </form>
                        <a asp-controller="Farm" asp-action="DetailsFarm" asp-route-id="@farm.Id" class="btn btn-info">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
