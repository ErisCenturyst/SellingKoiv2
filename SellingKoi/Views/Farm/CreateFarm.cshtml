@model SellingKoi.Models.Farm

@{
    ViewData["Title"] = "Thêm Farm Mới";
}

<h2 class="text-center">Thêm Farm Mới</h2>

<div class="container mt-4">
    <div class="card">
        <img src="https://i.pinimg.com/564x/06/8b/bb/068bbbdd3af5e8ab19559790eb3f0f0d.jpg" class="card-img-top" alt="Farm Image">
        <div class="card-body">
            <form asp-action="CreateFarm" method="post">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Nhập tên farm" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Owner" class="control-label"></label>
                    <input asp-for="Owner" class="form-control" placeholder="Nhập tên chủ farm" />
                    <span asp-validation-for="Owner" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Mô tả farm" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GoogleMapsLink" class="control-label"></label>
                    <input asp-for="GoogleMapsLink" class="form-control" placeholder="Nhập đường link Google Maps" />
                    <span asp-validation-for="GoogleMapsLink" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Thêm Farm</button>
                    <a asp-action="FarmManagement" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
