@model List<SellingKoi.Models.Trip>
@Html.AntiForgeryToken()

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<h2>Danh sách chuyến đi</h2>

<div style="text-align: center; margin-top: 20px;">
    <a href="@Url.Action("CreateTrip", "Trip")">
        <button type="button" class="btn btn-success">Tạo chuyến đi</button>
    </a>
</div>

<div class="table-responsive mt-4">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Số chuyến đi</th>
                <th>Ngày tạo</th>
                <th>Ngày khởi hành</th>
                <th>Trưởng đoàn</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var trip in Model)
            {
                <tr>
                    <td>@trip.TripNum</td>
                    <td>@trip.Registration_date.ToString("dd/MM/yyyy")</td>
                    <td>@trip.Date_of_departure.Value.ToString("dd/MM/yyyy")</td>
                    <td>@(trip.SaleStaff != null ? trip.SaleStaff.Fullname : "Chưa có nhân viên")</td>
                    <td>@trip.status</td>
                    <td>
                        <a asp-controller="Trip" asp-action="DetailsTrip" asp-route-id="@trip.Id" class="btn btn-primary">Chi tiết</a>
                        <button type="button" onclick="confirmDelete('@trip.Id', @(trip.SaleStaff != null || (trip.FollowAccountsID != null && trip.FollowAccountsID.Any()) ? "true" : "false"))" class="btn btn-danger">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function confirmDelete(tripId, hasStaff) {
        if (hasStaff === true) {
            alert("Bạn phải hủy chỉ định các nhân viên trước khi xóa chuyến đi");
            return;
        }

        if (confirm("Bạn có chắc muốn xóa chuyến đi này?")) {
            // Gửi request xóa đến server
            fetch('/Trip/DeleteTrip', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ tripId: tripId })
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Nếu xóa thành công, reload trang
                        window.location.reload();
                    } else {
                        // Nếu có lỗi, hiển thị thông báo
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert("Có lỗi xảy ra khi xóa chuyến đi");
                });
        }
    }
</script>

<style>
    /* Căn chỉnh và kiểu cho tiêu đề */
    h2 {
        font-size: 28px;
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    /* Kiểu chung cho bảng */
    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 16px;
        text-align: left;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    thead th {
     position: sticky;
        top: 0;
        background-color: #4e73df; /* Màu xanh dương hiện đại */
        color: black; /* Changed text color to solid black */
        padding: 15px;
        font-weight: bold;
        text-transform: uppercase;
        border-bottom: 3px solid #e3e6f0;
        letter-spacing: 0.05em;
        text-shadow: none; 
}

    tbody td {
        padding: 15px;
        border-bottom: 1px solid #ddd;
    }

    /* Kiểu chọn dòng */
    tbody tr:hover {
        background-color: #f1f1f1;
    }

    /* Kiểu cho nút Cập nhật */
    button[type="submit"], button[type="button"] {
        background-color: #28a745;
        color: white;
        padding: 10px 20px;
        margin-right: 5px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s;
    }

    button[type="submit"]:hover, button[type="button"]:hover {
        background-color: #218838;
    }

    /* Specific styles for delete button */
    button.btn-danger {
        background-color: #dc3545;
    }

    button.btn-danger:hover {
        background-color: #c82333;
    }
</style>
