@model SellingKoi.Models.Account

@{
    ViewData["Title"] = "Chi tiết Tài khoản";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Chi tiết Tài khoản</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">@Model.Username</h4>
            <dl class="row">
                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9">@Model.Fullname</dd>

                <dt class="col-sm-3">Vai trò</dt>
                <dd class="col-sm-9">@Model.Role</dd>

                <dt class="col-sm-3">Ngày đăng ký</dt>
                <dd class="col-sm-9">@Model.Registration_date.ToString("dd/MM/yyyy")</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="AccountManagement" class="btn btn-secondary">Quay lại danh sách</a>
        <form asp-action="NegateAccount" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa tài khoản này?');">Xóa</button>
        </form>
    </div>
</div>
