@model IEnumerable<SellingKoi.Models.Route>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách Lộ trình</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .route-container {
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            transition: transform 0.2s;
        }
        .route-container:hover {
            transform: scale(1.02);
        }
        .add-to-cart {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h1 class="text-center">Danh sách Lộ trình</h1>

        @foreach (var route in Model)
        {
            <div class="route-container card">
                <div class="card-body">
                    <div class="route-title">@route.Name</div>
                    <div>
                        <strong>Trạng thái:</strong> @(route.Status ? "Hoạt động" : "Ngừng hoạt động")<br />
                        <strong>Ngày đăng ký:</strong> @route.Registration_date.ToString("dd/MM/yyyy")<br />
                        <strong>Giá tiền :</strong> @(route.Price.ToString()) VNĐ
                    </div>
                    <div>
                        <strong>Trang trại thuộc lộ trình:</strong>
                        @if (route.Farms != null && route.Farms.Any())
                        {
                            foreach (var farm in route.Farms)
                            {
                                <div>- @farm.Name</div>
                            }
                        }
                        else
                        {
                            <div>Không có trang trại nào.</div>
                        }
                    </div>
                    <button class="add-to-cart" onclick="addToCart('@route.Id','@route.Name','@route.Price')">Add to Cart</button>
                </div>
            </div>
        }
    </div>

    <script>
        function addToCart(routeId, routeName, routePrice) {
            fetch('/Cart/AddToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ Id: routeId, Name: routeName, Price: routePrice })
            })
            .then(response => {
                if (response.ok) {
                    alert('Đã thêm vào giỏ hàng!');
                } else {
                    alert('Có lỗi xảy ra!');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
    </script>

</body>
</html>
