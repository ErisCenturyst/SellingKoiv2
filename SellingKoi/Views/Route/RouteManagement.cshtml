@model IEnumerable<SellingKoi.Models.Route>

@{
    ViewBag.Title = "Quản Lý Lộ trình";
}

<h2 class="text-center">Quản Lý lộ trình</h2>

<div class="container mt-4">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Tên lộ trình</th>
                <th>Trang trại đi qua</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var route in Model)
            {
                <tr>
                    <td>@route.Name</td>
                    <td>
                        @foreach (var farms in route.Farms.Where(f => f.Status))
                        {
                            <p>@farms.Name</p>
                        }
                    </td>
                    <td>
                        <form asp-controller="Route" asp-action="NegateRoute" asp-route-id="@route.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa route này?');">Xóa</button>
                        </form>
                        <a asp-controller="Route" asp-action="DetailsRoute" asp-route-id="@route.Id" class="btn btn-primary">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <a asp-controller="Route" asp-action="CreateRoute" class="btn btn-primary">Thêm Lộ trình mới</a>
    </div>
</div>
