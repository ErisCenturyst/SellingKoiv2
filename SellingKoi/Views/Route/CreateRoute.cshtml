@model SellingKoi.Models.Route
@using System.Linq

@{
    ViewBag.Title = "Tạo Route Mới";
}

<h2 class="text-center">Tạo Route Mới</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <form asp-controller="Route" asp-action="CreateRoute" method="post">
                <div class="form-group">
                    <label for="Name">Tên Lộ Trình</label>
                    <input type="text" class="form-control" id="Name" name="Name" required />
                </div>

                <div class="form-group">
                    <label for="Description">Mô Tả</label>
                    <textarea class="form-control" id="Description" name="Description"></textarea>
                </div>

                <div class="form-group">
                    <label for="Farms">Chọn Farm</label>
                    <select multiple class="form-control" id="Farms" name="Farms">
                        @if (ViewBag.Farms != null && ((List<SellingKoi.Models.Farm>)ViewBag.Farms).Count > 0)
                        {
                            foreach (var farm in (List<SellingKoi.Models.Farm>)ViewBag.Farms)
                            {
                                <option value="@farm.Id">@farm.Name</option>
                            }
                        }
                        else
                        {
                            <option disabled>Không có farm nào để chọn</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Lưu</button>
                <a href="@Url.Action("RouteManagement", "Route")" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>
