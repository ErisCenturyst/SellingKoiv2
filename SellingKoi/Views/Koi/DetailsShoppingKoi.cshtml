@model SellingKoi.Models.KOI

@{
    ViewData["Title"] = "Chi tiết cá Koi";
}

<div>
    <a asp-action="KoiManagement" class="btn btn-secondary">Quay lại</a>
</div>

<h2>Chi tiết cá Koi</h2>

<div>
    @if (Model == null)
    {
        <p>Không tìm thấy thông tin Koi.</p>
    }

    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Loại cá</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Tuổi</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Trang trại</dt>
        <dd class="col-sm-10">@Model.Farm.Name</dd>
    </dl>
</div

<div class="col-sm-6">

    <h4>Thông tin trang trại</h4>
    <dl class="row">
        <dt class="col-sm-4">Tên</dt>
        <dd class="col-sm-8">@Model.Farm.Name</dd>

        <dt class="col-sm-4">Chủ trại</dt>
        <dd class="col-sm-8">@Model.Farm.Owner</dd>

        <dt class="col-sm-4">Chú thích</dt>
        <dd class="col-sm-8">@Model.Farm.Description</dd>

        <dt class="col-sm-4">Vị trí</dt>
        <dd class="col-sm-8">@Model.Farm.Location</dd
    </dl>
    <a asp-controller="Farm" asp-action="DetailsShoppingFarm" asp-route-id="@Model.Farm.Id" class="btn btn-info">Chi tiết trang trại</a> <!-- Thêm nút này -->

</div>

<!-- Hiển thị các cá Koi liên quan -->
<div>
    <h3>Cá Koi liên quan</h3>
    @if (ViewBag.RelatedKois != null && ViewBag.RelatedKois.Any())
    {
        <ul>
            @foreach (var relatedKoi in ViewBag.RelatedKois)
            {
                <li>
                    <a asp-controller="Koi" asp-action="DetailsShoppingKoi" asp-route-id="@relatedKoi.Id">
                        @relatedKoi.Name
                    </a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>Không có cá Koi liên quan.</p>
    }
</div>
